{
  "manifest_version": 3,
  "name": "Swipe Navigation Gesture (back & forth)",
  "version": "3.2.0",
  "description": "Navigate back and forth with a 2-finger swipe gesture with interesting icons",
  "options_page": "src/user-settings.html",
  "web_accessible_resources": [
    {
      "resources": ["assets/arrow_styles, assets/icons"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "assets/icons/16.png",
    "32": "assets/icons/32.png",
    "48": "assets/icons/48.png",
    "128": "assets/icons/128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "run_at": "document_end",
      "js": ["src/swipe-back.js"]
    }
  ],
  "action": {
    "default_popup": "src/popup.html"
  },
  "permissions": [
    "storage"
  ]
}
